{
  "version": 2,
  "builds": [
    {
      "src": "dist/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/frontend/index.html"
    }
  ],
  "env": {
    "BACKEND_API_URL": "@backend_api_url",
    "JWT_SECRET": "@jwt_secret"
  }
}